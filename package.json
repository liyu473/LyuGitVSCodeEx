{
  "name": "lyugitex",
  "displayName": "LyuGitEx",
  "description": "快速生成 CI/CD 工作流和 Git 操作工具",
  "version": "0.0.2",
  "publisher": "liyu473",
  "repository": {
    "type": "git",
    "url": "https://github.com/liyu473/LyuGitVSCodeEx.git"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lyugitex.generateReleaseYml",
        "title": "生成 Release.yml (C#/.NET)",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.generateVscodeExtYml",
        "title": "生成 Release.yml (VS Code 扩展)",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.createTag",
        "title": "创建 Tag",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.deleteLatestTag",
        "title": "删除最新 Tag",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.gitPull",
        "title": "Git Pull",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.gitPush",
        "title": "Git Push",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.deleteLocalTag",
        "title": "删除本地 Tag",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.deleteRemoteTag",
        "title": "删除远程 Tag",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.cleanLocalBranches",
        "title": "清理本地已合并分支",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.manageSecrets",
        "title": "管理 GitHub Secrets",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.openSecrets",
        "title": "打开 Secrets 页面",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.openActions",
        "title": "打开 Actions 页面",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.deleteWorkflowRuns",
        "title": "删除 Actions 记录",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.initRepo",
        "title": "初始化 Git 仓库",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.addRemoteAndPush",
        "title": "推送到远程仓库",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.resetLocalCommits",
        "title": "回退本地记录",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.resetRemoteCommits",
        "title": "回退远程记录",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.deleteLocalCommits",
        "title": "删除本地记录",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.deleteRemoteCommits",
        "title": "删除远程记录",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.recoverCommits",
        "title": "恢复记录",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.addGitignore",
        "title": "添加 .gitignore",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.openSettings",
        "title": "打开设置",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.manageRemotes",
        "title": "管理远程仓库",
        "category": "LyuGitEx"
      },
      {
        "command": "lyugitex.syncToRemotes",
        "title": "同步到远程仓库",
        "category": "LyuGitEx"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "lyugitex.generateReleaseYml",
          "group": "lyugitex@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lyugitex",
          "title": "LyuGitEx",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "lyugitex": [
        {
          "type": "webview",
          "id": "lyugitexWebview",
          "name": "工具面板"
        }
      ]
    },
    "configuration": {
      "title": "LyuGitEx",
      "properties": {
        "lyugitex.network.retryCount": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "网络请求失败时的重试次数"
        },
        "lyugitex.network.timeout": {
          "type": "number",
          "default": 15000,
          "minimum": 5000,
          "maximum": 60000,
          "description": "网络请求超时时间（毫秒）"
        },
        "lyugitex.network.retryDelay": {
          "type": "number",
          "default": 1500,
          "minimum": 500,
          "maximum": 10000,
          "description": "重试间隔时间（毫秒）"
        },
        "lyugitex.git.commandTimeout": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 120000,
          "description": "Git 命令超时时间（毫秒）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.95.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0"
  },
  "dependencies": {
    "libsodium-wrappers": "^0.7.15"
  }
}
