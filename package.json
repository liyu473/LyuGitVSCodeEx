{
  "name": "workflow-generator",
  "displayName": "Workflow Generator",
  "description": "快速生成 CI/CD 工作流和 Git 操作工具",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workflow-generator.generateReleaseYml",
        "title": "生成 Release.yml (NuGet)",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.createTag",
        "title": "创建 Tag",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.deleteLatestTag",
        "title": "删除最新 Tag",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.gitPull",
        "title": "Git Pull",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.gitPush",
        "title": "Git Push",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.deleteLocalTag",
        "title": "删除本地 Tag",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.deleteRemoteTag",
        "title": "删除远程 Tag",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.cleanLocalBranches",
        "title": "清理本地已合并分支",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.manageSecrets",
        "title": "管理 GitHub Secrets",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.openSecrets",
        "title": "打开 Secrets 页面",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.openActions",
        "title": "打开 Actions 页面",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.deleteWorkflowRuns",
        "title": "删除 Actions 记录",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.initRepo",
        "title": "初始化 Git 仓库",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.addRemoteAndPush",
        "title": "推送到远程仓库",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.resetLocalCommits",
        "title": "回退本地记录",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.resetRemoteCommits",
        "title": "回退远程记录",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.deleteLocalCommits",
        "title": "删除本地记录",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.deleteRemoteCommits",
        "title": "删除远程记录",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.recoverCommits",
        "title": "恢复记录",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.addGitignore",
        "title": "添加 .gitignore",
        "category": "Workflow"
      },
      {
        "command": "workflow-generator.openSettings",
        "title": "打开设置",
        "category": "Workflow"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "workflow-generator.generateReleaseYml",
          "group": "workflow@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "workflow-generator",
          "title": "Workflow Generator",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "workflow-generator": [
        {
          "type": "webview",
          "id": "workflowWebview",
          "name": "工具面板"
        }
      ]
    },
    "configuration": {
      "title": "Workflow Generator",
      "properties": {
        "workflowGenerator.network.retryCount": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "网络请求失败时的重试次数"
        },
        "workflowGenerator.network.timeout": {
          "type": "number",
          "default": 15000,
          "minimum": 5000,
          "maximum": 60000,
          "description": "网络请求超时时间（毫秒）"
        },
        "workflowGenerator.network.retryDelay": {
          "type": "number",
          "default": 1500,
          "minimum": 500,
          "maximum": 10000,
          "description": "重试间隔时间（毫秒）"
        },
        "workflowGenerator.git.commandTimeout": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 120000,
          "description": "Git 命令超时时间（毫秒）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.95.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0"
  },
  "dependencies": {
    "libsodium-wrappers": "^0.7.15"
  }
}
